{
  "name": "agitcms",
  "version": "0.1.0",
  "private": true,
  "author": "0xsuk <iam0xsuk@gmail.com>",
  "main": "electron/electron.js",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.5.0",
    "react": "^17.0.2",
    "electron-is-dev": "^2.0.0",
    "react-dom": "^17.0.2",
    "react-router-dom": "^6.2.1",
    "react-scripts": "5.0.0",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently \"BROWSER=none npm run start\" \"wait-on http://localhost:3000 && electron .\"",
    "build:pre": "react-scripts build && cp -r electron build/electron",
    "build:post": "electron-builder -l -c.extraMetadata.main=build/electron/electron.js",
    "build": "npm run build:pre && npm run build:post"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^7.0.0",
    "electron": "^17.0.0",
    "electron-builder": "^22.14.13",
    "electron-reload": "^2.0.0-alpha.1",
    "wait-on": "^6.0.1"
  },
  "build": {
    "appId": "com.agitcms",
    "extends": null,
    "files": [
      "build/**/*"
    ]
  }
}
